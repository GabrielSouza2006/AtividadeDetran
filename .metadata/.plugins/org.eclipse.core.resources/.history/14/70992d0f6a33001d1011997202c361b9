package Application;

import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		//Váriaveis que serão utilizadas
		int numCarta;
		int numMult;
		
		double valorMult;
		double totDiv = 0;
		//váriaveis auxiliares
		int aux1 = 0;
		int aux2 = 0;
		
		System.out.print("Digite o número de motoristas: ");
		int numMot = sc.nextInt();
		
		System.out.println("");
		System.out.println("Digite o número das cartas de cada motorista: ");
		while(aux1 < numMot) {
			aux1++;
			System.out.println("");
			System.out.print("Motorista #" + (aux1) + " ");
			numCarta = sc.nextInt();
			if(numCarta >= 1 && numCarta <= 4327) {
				System.out.println("ok");
				System.out.print("Digite o número de multas: ");
				numMult = sc.nextInt();
				System.out.println("");
				System.out.println("Digite o valor das multas: ");
				aux2 = 0;
				while(aux2 < numMult) {
					aux2++;
					
					System.out.print("#" + (aux2) + " ");
					valorMult = sc.nextDouble();
					
					totDiv = totDiv + valorMult;
				}
			}else {
				System.out.println("Numero inválido.");
			}
			System.out.println("Valor total da multa: " + "R$" +  totDiv);
		}
		
		sc.close();
	}

}
